<h1>Merchants</h1>

<div id='enabled_merchants'>
  <h2>Enabled Merchants</h2>
  <% @merchants.enabled.each do |merchant| %>
    <div id='merchant-<%= merchant.id  %>'
      <p>
        <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %>
        <%= button_to "Disable #{merchant.name}", "/admin/merchants/#{merchant.id}?status=disabled", method: :patch %>
      </p>
    </div>
  <% end %>
</div>

<div id='disabled_merchants'>
  <h2>Disabled Merchants</h2>
  <% @merchants.disabled.each do |merchant| %>
    <div id='merchant-<%= merchant.id  %>'
      <p>
        <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %>
        <%= button_to "Enable #{merchant.name}", "/admin/merchants/#{merchant.id}?status=enabled", method: :patch %></p>
      </p>
    </div>
  <% end %>
</div>
