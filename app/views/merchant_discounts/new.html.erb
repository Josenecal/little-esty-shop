<h2>Add a Discount</h2>

<%= form_with url: "/merchants/#{params[:merchant_id]}/bulk_discounts/", method: :post do |f| %>
  <%= f.label "percent (%) to discount from unit_price" %>
  <%= f.number_field :discount, in: 0.00..100.00, step: 0.05 %></br>
  <%= f.label "minimum discount threshold" %>
  <%= f.number_field :threshold, step: 1 %></br>
  <%= f.submit "Create Discount"%>
<% end %>
